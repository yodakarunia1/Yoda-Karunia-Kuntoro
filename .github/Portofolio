        // Carousel Logic
        const track = document.querySelector('.carousel-track');
        const items = Array.from(track.children);
        const nextButton = document.querySelector('.carousel-button.next');
        const prevButton = document.querySelector('.carousel-button.prev');
        let itemWidth = items[0].getBoundingClientRect().width;
        let currentIndex = 0;

        function updateCarouselWidth() {
            itemWidth = items[0].getBoundingClientRect().width;
             track.style.transform = 'translateX(' + (-itemWidth * currentIndex) + 'px)';
        }
        
        window.addEventListener('resize', updateCarouselWidth);

        nextButton.addEventListener('click', () => {
            if (currentIndex < items.length - (window.innerWidth < 768 ? 1 : window.innerWidth < 1024 ? 2 : 3) ) {
                 currentIndex++;
            } else {
                currentIndex = 0; // Loop to start
            }
            track.style.transform = 'translateX(' + (-itemWidth * currentIndex) + 'px)';
        });

        prevButton.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
            } else {
                 currentIndex = items.length - (window.innerWidth < 768 ? 1 : window.innerWidth < 1024 ? 2 : 3); // Loop to end
                 if (currentIndex < 0) currentIndex = 0;
            }
            track.style.transform = 'translateX(' + (-itemWidth * currentIndex) + 'px)';
        });
        
        updateCarouselWidth(); // Initial call

        // Modal Logic
        const modal = document.getElementById('projectModal');
        function openModal(projectId) {
            const project = projects.find(p => p.id === projectId);
            if (project) {
                document.getElementById('modalTitle').textContent = project.title;
                document.getElementById('modalImage').src = project.image;
                document.getElementById('modalImage').alt = project.title;
                document.getElementById('modalRole').textContent = project.role;
                document.getElementById('modalTech').textContent = project.tech;
                document.getElementById('modalDescription').innerHTML = project.description; // Use innerHTML if desc contains HTML
                document.getElementById('modalChallenge').innerHTML = project.challenge;
                document.getElementById('modalSolution').innerHTML = project.solution;
                modal.style.display = "block";
            }
        }
        function closeModal() {
            modal.style.display = "none";
        }
        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }

